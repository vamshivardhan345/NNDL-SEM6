        "import tensorflow as tf\n",
        "import numpy as np\n",
        "\n",
        "# Convert inputs to tensors\n",
        "x = tf.constant([[1.0, 0.0, 1.0]], dtype=tf.float32)\n",
        "\n",
        "ip_hid = tf.constant([\n",
        "    [0.5, 0.4],\n",
        "    [-0.2, 0.1],\n",
        "    [0.3, -0.5]\n",
        "], dtype=tf.float32)\n",
        "\n",
        "op_hid = tf.constant([\n",
        "    [0.7],\n",
        "    [0.2]\n",
        "], dtype=tf.float32)\n",
        "\n",
        "b_hid = tf.constant([[0.1, -0.1]], dtype=tf.float32)\n",
        "b_out = tf.constant([[0.05]], dtype=tf.float32)\n",
        "\n",
        "# Forward pass\n",
        "hid_raw = tf.matmul(x, ip_hid) + b_hid\n",
        "hid = tf.nn.relu(hid_raw)\n",
        "\n",
        "output_raw = tf.matmul(hid, op_hid) + b_out\n",
        "output = tf.sigmoid(output_raw)\n",
        "\n",
        "print(\"Hidden layer output:\", hid.numpy())\n",
        "print(\"Final output:\", output.numpy())\n"
      ]
