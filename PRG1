        "import numpy as np\n",
        "def sigmoid(z):\n",
        "    return 1 / (1 + np.exp(-z))\n",
        "def sigmoid_derivative(a):\n",
        "    return a * (1 - a)\n",
        "np.random.seed(1)\n",
        "W = np.random.randn(2, 1)\n",
        "b = np.zeros((1, 1))\n",
        "X = np.array([[0,0,1,1],\n",
        "              [0,1,0,1]])\n",
        "Y = np.array([[0,0,0,1]])\n",
        "learning_rate = 0.1\n",
        "epochs = 1000\n",
        "for _ in range(epochs):\n",
        "    # Forward propagation\n",
        "    Z = np.dot(W.T, X) + b\n",
        "    A = sigmoid(Z)\n",
        "    # Loss gradient\n",
        "    dZ = A - Y\n",
        "    dW = np.dot(X, dZ.T) / X.shape[1]\n",
        "    db = np.sum(dZ) / X.shape[1]\n",
        "    # Update weights\n",
        "    W -= learning_rate * dW\n",
        "    b -= learning_rate * db\n",
        "print(\"Predictions:\")\n",
        "print(sigmoid(np.dot(W.T, X) + b))\n"
      ],
