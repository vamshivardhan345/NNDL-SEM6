      "source": [
        "import numpy as np\n",
        "class FeedForwardNN:\n",
        "    def __init__(self):\n",
        "        np.random.seed(1)\n",
        "        self.W1 = np.random.randn(2, 3)\n",
        "        self.W2 = np.random.randn(3, 1)\n",
        "    def sigmoid(self, x):\n",
        "        return 1 / (1 + np.exp(-x))\n",
        "    def sigmoid_derivative(self, x):\n",
        "        return x * (1 - x)\n",
        "    def forward(self, X):\n",
        "        self.z1 = np.dot(X, self.W1)\n",
        "        self.a1 = self.sigmoid(self.z1)\n",
        "        self.z2 = np.dot(self.a1, self.W2)\n",
        "        output = self.sigmoid(self.z2)\n",
        "        return output\n",
        "    def backward(self, X, y, output, lr=0.1):\n",
        "        error = y - output\n",
        "        d_output = error * self.sigmoid_derivative(output)\n",
        "        d_hidden = d_output.dot(self.W2.T) * self.sigmoid_derivative(self.a1)\n",
        "        self.W2 += self.a1.T.dot(d_output) * lr\n",
        "        self.W1 += X.T.dot(d_hidden) * lr\n",
        "    def train(self, X, y, epochs=10000):\n",
        "        for _ in range(epochs):\n",
        "            output = self.forward(X)\n",
        "            self.backward(X, y, output)\n",
        "X = np.array([[0,0],[0,1],[1,0],[1,1]])\n",
        "y = np.array([[0],[1],[1],[0]])\n",
        "nn = FeedForwardNN()\n",
        "nn.train(X, y)\n",
        "print(nn.forward(X))"
      ]
    },
